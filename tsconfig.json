{
	"extends": "@sapphire/ts-config",
	"compilerOptions": {
		"experimentalDecorators": true,
		"rootDir": "src",
		"outDir": "dist",
		"tsBuildInfoFile": "dist/.tsbuildinfo",
		"target": "ES2020",
        "moduleResolution": "node",
        "module": "commonjs",
		"skipLibCheck": true,
		"noImplicitAny": false,
		"noImplicitReturns": false
	},
	"include": ["src"]
}
 